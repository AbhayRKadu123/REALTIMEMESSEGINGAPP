<% layout('boilerplate') -%>
<div class="container">
    <h2 class="text-center mb-4">Create a New Chat Room</h2>

    <form method="post" id="chatRoomForm" action="/createRoom">
        <div class="mb-3">
            <label for="roomName" class="form-label">Room Name</label>
            <input type="text" class="form-control" id="roomName" name="RoomName" placeholder="Enter room name" required>
        </div>
        <button  class="btn btn-primary w-100">Create Room</button>
    </form>

    <p class="mt-3 text-center">
        <a href="/SeeExistingRoom">Join an existing room</a>
    </p>
</div>